# App
NODE_ENV=development
PORT=8000
TRUST_PROXY=false
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=1000

# Database
# For Docker dev, use DB_HOST=db. For local runs, use DB_HOST=localhost.
DATABASE_URL=postgresql://postgres:your_db_password@db:5432/app_db
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=app_db

# Redis
# For Docker dev, use REDIS_HOST=redis. For local runs, use REDIS_HOST=localhost.
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB
# For Docker dev, use MONGO_URI=mongodb://mongo:27017/cycup
MONGO_URI=mongodb://mongo:27017/cycup

# Mail
# For Docker dev, use SMTP_HOST=mailpit and SMTP_PORT=1025.
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
MAIL_FROM=no-reply@cycup.com
MAILPIT_UI_PORT=8025

# Frontend
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=http://localhost:3000

# Storage
STORAGE_DRIVER=local
STORAGE_LOCAL_DIR=uploads
STORAGE_LOCAL_URL=/uploads
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=
S3_BASE_URL=
S3_FORCE_PATH_STYLE=false

# Cookies
COOKIE_NAME=session
COOKIE_SAMESITE=lax
COOKIE_SECURE=false
COOKIE_DOMAIN=
